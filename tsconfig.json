{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "/dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@module/*": ["src/module/*"],
      "@shared/*": ["src/shared/*"],
      "@test/*": ["src/test/*"],
      "@env/*": ["src/env/*"],
      "@infra/*": ["src/infra/*"],
      "@providers/*": ["src/providers/*"]
    },
    "types": ["vitest/globals"]
  }
}
